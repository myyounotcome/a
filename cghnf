<script>
function obfuscate() {
    let code = document.getElementById("input").value;
    if (!code.trim()) return;

    let bytes = [];
    for (let i = 0; i < code.length; i++) {
        bytes.push(code.charCodeAt(i) + 3);
    }

    function rand(n=8){
        return Array.from({length:n},()=>String.fromCharCode(97+Math.random()*26|0)).join("");
    }

    let a = rand(), b = rand(), c = rand(), d = rand();

    let encoded = bytes.join(",");

    let result = `
local ${a}={${encoded}}
local function ${b}()
    local ${c}=""
    for i=1,#${a} do
        ${c}=${c}..string.char(${a}[i]-3)
    end
    return ${c}
end

local ${d}=(${b})()
pcall(function()
    loadstring(${d})()
end)
`;

    document.getElementById("output").value = result.trim();
}
